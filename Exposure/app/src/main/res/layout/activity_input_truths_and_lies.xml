<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        android:id="@+id/label_4"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="348dp"
        android:layout_marginBottom="156dp"
        android:backgroundTint="@color/Primary100"
        android:text="1"
        android:textColor="@color/Secondary700"
        app:cornerRadius="200dp" />

    <RelativeLayout
        android:id="@+id/message_user_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_user_bar_background"
        android:elevation="6dp"
        android:layout_margin="18dp"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginHorizontal="18dp"
            android:src="@drawable/default_display_image" />

        <TextView
            android:id="@+id/message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/NameFont"
            android:layout_centerVertical="true"
            android:text="First"
            android:layout_toEndOf="@id/message_user_image" />

        <ImageButton
            android:id="@+id/message_open_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:tint="@color/Secondary500"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="560dp"
        android:elegantTextHeight="true"
        android:text="THREE TRUTHS AND A LIE"
        android:textAlignment="center"
        android:textColor="@color/Secondary600"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/truths_question"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="485dp"
        android:text="Input three obscure truths about yourself."
        android:textColor="@color/Secondary200"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lies_question"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="189dp"
        android:text="Input one obscure lie about yourself."
        android:textColor="@color/Secondary200"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="322dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="@color/Primary100"
        android:text="Let's Play"
        android:onClick="onClickPlay"
        android:textColor="@color/Secondary700"
        app:cornerRadius="200dp" />

    <Button
        android:id="@+id/label_1"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="348dp"
        android:layout_marginBottom="439dp"
        android:backgroundTint="@color/Primary100"
        android:text="1"
        android:textSize="10dp"
        android:textColor="@color/Secondary700"
        app:cornerRadius="200dp" />

    <Button
        android:id="@+id/label_2"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="348dp"
        android:layout_marginBottom="383dp"
        android:backgroundTint="@color/Primary100"
        android:text="2"
        android:textSize="10dp"
        android:textColor="@color/Secondary700"
        app:cornerRadius="200dp" />

    <Button
        android:id="@+id/label_3"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="348dp"
        android:layout_marginBottom="325dp"
        android:backgroundTint="@color/Primary100"
        android:text="3"
        android:textSize="10dp"
        android:textColor="@color/Secondary700"
        app:cornerRadius="200dp" />

    <EditText
        android:id="@+id/truth_1_text"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="440dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/Secondary300"
        android:text="First truth about yourself" />

    <EditText
        android:id="@+id/truth_2_text"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="385dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/Secondary300"
        android:text="Second truth about yourself" />

    <EditText
        android:id="@+id/truth_3_text"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="326dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/Secondary300"
        android:text="Third truth about yourself" />


    <EditText
        android:id="@+id/lie_text"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="158dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/Secondary300"
        android:text="Tell us a lie about yourself" />




</RelativeLayout>