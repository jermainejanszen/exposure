<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/Primary50"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/add_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/field"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="25dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="65dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/Primary100"
        android:textColor="@color/Black"
        android:textColorHint="@color/Secondary500"
        android:inputType="textPersonName"
        android:imeOptions="actionDone"
        android:maxLength="100"
        android:textAlignment="center"
        android:textSize="22sp"
        android:importantForAutofill="no"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_field"
        android:layout_centerHorizontal="true"
        android:id="@+id/save"
        android:text="@string/save"
        android:textColor="@color/Primary100"
        android:textSize="26sp" />
</RelativeLayout>