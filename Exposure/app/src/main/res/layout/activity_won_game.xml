<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/continue_to_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="454dp"
        android:layout_marginEnd="152dp"
        android:text="@string/continue_to_next"
        android:textColor="@color/Primary100"
        android:onClick="onClickContinue"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/congratulations"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="450dp"
        android:text="Congratulations!"
        android:textAlignment="center"
        android:textColor="@color/Primary300"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/unlocked"
        android:layout_width="266dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="366dp"
        android:text="You caught the lie! You have unlocked the following information about your match:"
        android:textAlignment="center" />

    <Button
        android:id="@+id/unlocked_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="301dp"
        android:backgroundTint="@color/Primary100"
        android:text="\?"
        android:textColor="@color/Secondary700"
        app:cornerRadius="50dp" />


</RelativeLayout>