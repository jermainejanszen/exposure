<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exposure">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SignUpActivity"/>
        <activity android:name=".activities.LoginActivity"/>
        <activity android:name=".activities.EditProfileActivity"/>
        <activity android:name=".activities.ViewOtherProfileActivity"/>
        <activity android:name=".activities.ThreeTruthsOneLieActivity"/>
        <activity android:name=".popups.WonGameActivity" />
        <activity android:name=".popups.LostGameActivity" />
        <activity android:name=".popups.RetrieveImageActivity"
            android:theme="@style/Theme.Design.BottomSheetDialog"
            />
        <activity android:name=".popups.AddUserFieldActivity"
            android:theme="@style/Theme.Design.BottomSheetDialog"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".activities.MessageActivity"/>
    </application>

</manifest>